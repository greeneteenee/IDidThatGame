@model IDidThatGame.Models.ActionItem

<h4>Add new @Html.DisplayNameFor(model => model.ActionName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="ActionItems" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>          
            <div class="form-group">
                <label asp-for="ActionName" class="control-label"></label>
                <input asp-for="ActionName" class="form-control" />
                <span asp-validation-for="ActionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Advanced" /> @Html.DisplayNameFor(model => model.Advanced)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="EditGame" asp-action="EditGame">Back to List</a>
</div>

